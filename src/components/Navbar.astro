---
import ColorModeSwitcher from "./ui/ColorModeSwitcher.astro";
import Logo from "./ui/Logo.astro";
import { getSession, getUser, isAuth } from "../lib/auth";

import { getLocale } from "astro-i18n-aut";
import { useTranslations, useTranslatedPath } from "../i18n/utils";
import type { Lang } from "../i18n/ui";

const lang = getLocale(Astro.url);
const t = useTranslations(lang as Lang);
const translatePath = useTranslatedPath(lang as Lang);

// Check authentication status using new server-side utilities
const isAuthenticated = await isAuth(Astro.cookies);
const user = await getUser(Astro.cookies);
const session = await getSession(Astro.cookies);

export interface NavLink {
  label: string;
  href: string;
}

export interface Props {
  navLinks?: NavLink[];
}

const {
  navLinks = [
    {
      label: t("navbar.mission"),
      href: `${translatePath("#mission")}`,
    },
    { label: t("navbar.about"), href: `${translatePath("#about")}` },
    { label: t("navbar.contact"), href: `${translatePath("#contact")}` },
  ],
} = Astro.props;
---

<header class="backdrop-blur-md sticky top-0 z-50">
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a href={translatePath("/")} class="flex items-center">
      <Logo />
    </a>
    <div class="hidden md:flex items-center space-x-8">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class="hover:underline hover:underline-offset-2 transition duration-300"
          >
            {link.label}
          </a>
        ))
      }
    </div>
    <div class="flex items-center space-x-2">
      <ColorModeSwitcher tooltip={t("navbar.toggleTheme")} />
      {
        isAuthenticated ? (
          <div class="flex items-center space-x-2">
            <a
              href={translatePath("/dashboard")}
              class="px-4 py-2 text-navy dark:text-white font-medium rounded-lg hover:bg-navy/10 dark:hover:bg-white/10 transition duration-300"
            >
              {t("navbar.dashboard")}
            </a>
            <a
              href={translatePath("/profile")}
              class="px-4 py-2 text-navy dark:text-white font-medium rounded-lg hover:bg-navy/10 dark:hover:bg-white/10 transition duration-300 hidden sm:inline-block"
            >
              Profile
            </a>
            <a
              href="/api/signout"
              class="px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition duration-300"
            >
              {t("navbar.signOut")}
            </a>
          </div>
        ) : (
          <div class="flex items-center space-x-2">
            <a
              href={translatePath("/signin")}
              class="px-4 py-2 text-navy dark:text-white font-medium rounded-lg hover:bg-navy/10 dark:hover:bg-white/10 transition duration-300"
            >
              {t("navbar.login")}
            </a>
            <a href={translatePath("/register")} class="btn-primary">
              {t("navbar.register")}
            </a>
          </div>
        )
      }
    </div>
  </nav>
</header>
