---
import ColorModeSwitcher from "./ui/ColorModeSwitcher.astro";
import Logo from "./ui/Logo.astro";
import { useI18n } from "../i18n/utils";
import PrimaryButton from "./ui/PrimaryButton.astro";
import SecondaryButton from "./ui/SecondaryButton.astro";

const { t, translatePath } = useI18n(Astro);
---

<header class="backdrop-blur-md sticky top-0 z-50">
  <nav class="container mx-auto px-3 sm:px-4 md:px-6 py-3 sm:py-4">
    <!-- Flexbox layout: logo left, actions right -->
    <div class="flex justify-between items-center gap-2 sm:gap-4">
      <!-- Logo: left, scales responsively -->
      <a
        href={translatePath("/")}
        class="flex items-center transform scale-90 sm:scale-100 md:scale-110 flex-shrink-0"
      >
        <Logo />
      </a>

      <!-- Actions: right, stay compact -->
      <div
        class="flex justify-end items-center gap-1 sm:gap-2 md:gap-3 flex-shrink-0"
      >
        <ColorModeSwitcher tooltip={t("navbar.toggleTheme")} />
        <div class="flex items-center gap-1 sm:gap-2">
          <SecondaryButton
            link={translatePath("/signin")}
            text={t("navbar.login")}
          />

          <PrimaryButton
            text={t("navbar.register")}
            link={translatePath("/register")}
          />
        </div>
      </div>
    </div>
  </nav>
</header>
