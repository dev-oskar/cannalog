---
import ColorModeSwitcher from "./ui/ColorModeSwitcher.astro";

export interface Props {
  logoText?: string;
  user?: {
    name: string;
    email: string;
    avatarUrl: string;
  };
  menuItems?: {
    label: string;
    href: string;
  }[];
}

// default values
const {
  logoText = "CannaLog",
  user = {
    name: "Neil Sims",
    email: "neil.sims@flowbite.com",
    avatarUrl: "https://flowbite.com/docs/images/people/profile-picture-5.jpg",
  },
  menuItems = [
    { label: "Dashboard", href: "#" },
    { label: "Settings", href: "#" },
    { label: "Earnings", href: "#" },
    { label: "Sign out", href: "#" },
  ],
} = Astro.props;
---

<nav
  class="fixed top-0 z-40 w-full bg-card-bg-color border-b border-tertiary/20"
>
  <div class="px-3 py-3 lg:px-5 lg:pl-3">
    <div class="flex items-center justify-between">
      <div class="flex items-center justify-start rtl:justify-end">
        <button
          data-drawer-target="logo-sidebar"
          data-drawer-toggle="logo-sidebar"
          aria-controls="logo-sidebar"
          type="button"
          class="inline-flex items-center p-2 text-sm text-text-color/80 rounded-lg sm:hidden hover:bg-secondary/10 focus:outline-none focus:ring-2 focus:ring-primary/50"
        >
          <span class="sr-only">Open sidebar</span>
          <svg
            class="w-6 h-6"
            aria-hidden="true"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              clip-rule="evenodd"
              fill-rule="evenodd"
              d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"
            ></path>
          </svg>
        </button>
        <a href="/" class="flex ms-2 md:me-24">
          <img
            src="https://flowbite.com/docs/images/logo.svg"
            class="h-8 me-3"
            alt=`${logoText} Logo`
          />
          <span
            class="self-center text-xl font-semibold sm:text-2xl whitespace-nowrap text-text-color"
            >{logoText}</span
          >
        </a>
      </div>
      <div class="flex items-center">
        <div class="relative flex items-center ms-3">
          <div class="me-3">
            <ColorModeSwitcher />
          </div>
          <div>
            <button
              type="button"
              class="flex text-sm bg-card-bg-color rounded-full focus:ring-4 focus:ring-primary/50"
              aria-expanded="false"
              data-dropdown-toggle="dropdown-user"
            >
              <span class="sr-only">Open user menu</span>
              <img
                class="w-8 h-8 rounded-full"
                src={user.avatarUrl}
                alt="user photo"
              />
            </button>
          </div>
          <div
            class="z-50 hidden my-4 text-base list-none bg-card-bg-color divide-y divide-tertiary/20 rounded-lg shadow-lg border border-tertiary/10 w-48"
            id="dropdown-user"
          >
            <div class="px-4 py-3" role="none">
              <p class="text-sm text-text-color" role="none">
                {user.name}
              </p>
              <p
                class="text-sm font-medium text-text-color/80 truncate"
                role="none"
              >
                {user.email}
              </p>
            </div>
            <ul class="py-1" role="none">
              {
                menuItems.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class="block px-4 py-2 text-sm text-text-color/90 hover:bg-secondary/10"
                      role="menuitem"
                    >
                      {item.label}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>
