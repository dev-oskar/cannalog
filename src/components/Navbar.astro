---
import ColorModeSwitcher from "./ui/ColorModeSwitcher.astro";
import Logo from "./ui/Logo.astro";
import { useI18n } from "../i18n/utils";
import PrimaryButton from "./ui/PrimaryButton.astro";
import SecondaryButton from "./ui/SecondaryButton.astro";

const { t, translatePath } = useI18n(Astro);
---

<header class="backdrop-blur-md sticky top-0 z-50">
  <nav class="container mx-auto px-6 py-4">
    <!-- Use a 3-column grid so the logo can sit centered while actions live on the right -->
    <div class="grid grid-cols-3 items-center">
      <!-- Left column: intentionally empty (nav links moved to footer) -->
      <div></div>

      <!-- Center column: Logo -->
      <div class="flex justify-center">
        <a
          href={translatePath("/")}
          class="flex items-center transform scale-110 sm:scale-125"
        >
          <Logo />
        </a>
      </div>
      <!-- Right column: Color mode switcher and auth buttons -->
      <div class="flex justify-end items-center space-x-2">
        <ColorModeSwitcher tooltip={t("navbar.toggleTheme")} />
        <div class="flex items-center space-x-2">
          <SecondaryButton
            link={translatePath("/signin")}
            text={t("navbar.login")}
          />

          <PrimaryButton
            text={t("navbar.register")}
            link={translatePath("/register")}
          />
        </div>
      </div>
    </div>
  </nav>
</header>
