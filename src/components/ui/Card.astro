---
import { Icon } from "astro-icon/components";

/*
	Reusable Card component

	Props:
		- icon: string (name passed to Icon component)
		- title: string (rendered title)
		- description: string (rendered description)

	Keep this component small and layout-only so it can be reused in other pages.
*/
const { icon, title, description } = Astro.props;
---

<div>
  <div
    class="flex justify-center items-center mb-4 h-12 w-12 sm:h-10 sm:w-10 md:h-12 md:w-12 mx-auto rounded-full bg-primary-300 dark:bg-primary-800"
  >
    <Icon
      name={icon}
      class="w-6 h-6 sm:w-5 sm:h-5 md:w-6 md:h-6 text-primary-600 dark:text-primary-400"
    />
  </div>
  <h3
    class="mb-2 text-center text-lg sm:text-base md:text-lg lg:text-xl font-bold dark:text-white"
  >
    {title}
  </h3>
  <p
    class="text-center text-sm sm:text-xs md:text-sm lg:text-base text-gray-500 dark:text-gray-400"
  >
    {description}
  </p>
</div>
