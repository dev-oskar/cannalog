---
import ColorModeSwitcher from "./ColorModeSwitcher.astro";

// Define the shape of the props the component expects
export interface NavLink {
  label: string;
  href: string;
}

export interface Props {
  logoText?: string;
  navLinks?: NavLink[];
}

// default values
const {
  logoText = "CannaLog",
  navLinks = [
    { label: "Our mission", href: "#" },
    { label: "About", href: "#" },
    { label: "Contact", href: "#" },
  ],
} = Astro.props;
---

<nav
  class="bg-card-bg-color border-tertiary/10 border-b transition-colors duration-300"
>
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img
        src="https://flowbite.com/docs/images/logo.svg"
        class="h-8"
        alt=`${logoText} Logo`
      />
      <span
        class="self-center text-2xl font-semibold whitespace-nowrap text-text-color"
        >{logoText}</span
      >
    </a>
    <div
      class="flex md:order-2 space-x-3 md:space-x-2 rtl:space-x-reverse items-center"
    >
      <ColorModeSwitcher />

      <a
        href="#"
        class="text-white bg-primary hover:bg-primary-darker focus:ring-4 focus:outline-none focus:ring-primary/50 font-medium rounded-lg text-sm px-4 py-2 text-center transition-colors duration-300"
      >
        Get started
      </a>
      <button
        data-collapse-toggle="navbar-cta"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-text-color rounded-lg md:hidden hover:bg-secondary/10 focus:outline-none focus:ring-2 focus:ring-primary/50 transition-colors duration-300"
        aria-controls="navbar-cta"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
      id="navbar-cta"
    >
      <ul
        class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-primary/50 rounded-lg bg-card-bg-color md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-transparent"
      >
        {
          navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="block py-2 px-3 md:p-0 text-text-color rounded-sm hover:bg-primary/20 md:hover:bg-transparent md:hover:text-primary transition-colors duration-300"
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
