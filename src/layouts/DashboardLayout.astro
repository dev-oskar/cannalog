---
import "../styles/global.css";
import BaseLayout from "./BaseLayout.astro";
import Sidebar from "../components/Sidebar.astro";
import FooterSidebar from "../components/FooterSidebar.astro";

// Example user data to be passed to the Sidebar
const user = {
  name: "Neil Sims",
  email: "neil.sims@flowbite.com",
  avatarUrl: "https://flowbite.com/docs/images/people/profile-picture-5.jpg",
};
---

<BaseLayout title="Dashboard" description="User Dashboard">
  <!-- Hamburger button for mobile, previously in Navbar -->
  <button
    data-drawer-target="logo-sidebar"
    data-drawer-toggle="logo-sidebar"
    aria-controls="logo-sidebar"
    type="button"
    class="fixed top-4 left-4 z-30 inline-flex items-center p-2 text-sm text-text-color rounded-lg sm:hidden hover:bg-secondary/10 focus:outline-none focus:ring-2 focus:ring-primary/50"
  >
    <span class="sr-only">Open sidebar</span>
    <svg
      class="w-6 h-6"
      aria-hidden="true"
      fill="currentColor"
      viewBox="0 0 20 20"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        clip-rule="evenodd"
        fill-rule="evenodd"
        d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"
      ></path>
    </svg>
  </button>

  <Sidebar user={user} />

  <main class="p-4 pt-12 sm:pt-4 md:ml-64 h-auto">
    <slot />
    <FooterSidebar />
  </main>
</BaseLayout>
