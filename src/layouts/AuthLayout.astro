---
import BaseLayout from "./BaseLayout.astro";
import NavBar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const { title, description, locale } = Astro.props;
---

<BaseLayout title={title} description={description} locale={locale}>
  <NavBar />
  <main
    class="flex flex-col items-center justify-center min-h-[60vh] px-4 sm:px-6 md:px-12 lg:px-20 xl:px-80 max-w-7xl mx-auto"
  >
    <slot />
  </main>
  <Footer />
</BaseLayout>
