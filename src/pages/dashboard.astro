---
import Layout from "../layouts/DashboardLayout.astro";
import { getSession, getUser } from "../lib/auth";

import { getLocale } from "astro-i18n-aut";
import { useTranslations } from "../i18n/utils";
import type { Lang } from "../i18n/ui";

const lang = getLocale(Astro.url);
const t = useTranslations(lang as Lang);

// Get user session using the new server-side method
// Note: Authentication is now handled by middleware, so this page
// will only be reached if the user is authenticated
const session = await getSession(Astro.cookies);
const user = await getUser(Astro.cookies);
---

<Layout user={user}>
  <div class="p-4 sm:p-6 lg:p-8 space-y-6">
    <div class="bg-card-bg-color p-6 rounded-lg shadow-md">
      <h1 class="text-2xl font-bold text-text-color">{t("dashboard.title")}</h1>
      <p class="text-text-color/80 mt-1">
        {t("dashboard.welcomeBack")}{t("dashboard.welcomeMessage")}
      </p>
      {
        user?.email && (
          <p class="text-sm text-text-color/60 mt-2">
            {t("dashboard.signedInAs")} {user.email}
          </p>
        )
      }
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Example Card 1 -->
      <div class="bg-card-bg-color p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold text-text-color mb-3">
          {t("dashboard.recentEntries.title")}
        </h2>
        <p class="text-text-color/80">
          {t("dashboard.recentEntries.description")}
        </p>
        <button
          type="button"
          class="mt-4 text-white bg-primary-600 hover:bg-primary-600-darker focus:ring-4 focus:outline-none focus:ring-primary/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-colors duration-300"
        >
          {t("dashboard.recentEntries.button")}
        </button>
      </div>

      <!-- Example Card 2 -->
      <div class="bg-card-bg-color p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold text-text-color mb-3">
          {t("dashboard.inventory.title")}
        </h2>
        <p class="text-text-color/80">
          {t("dashboard.inventory.description")}
        </p>
        <button
          type="button"
          class="mt-4 text-text-color border border-primary hover:bg-primary-600-light focus:ring-4 focus:outline-none focus:ring-primary/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-colors duration-300"
        >
          {t("dashboard.inventory.button")}
        </button>
      </div>

      <!-- Example Card 3 -->
      <div class="bg-card-bg-color p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold text-text-color mb-3">
          {t("dashboard.discover.title")}
        </h2>
        <p class="text-text-color/80">
          {t("dashboard.discover.description")}
        </p>
      </div>
    </div>
  </div>
</Layout>
