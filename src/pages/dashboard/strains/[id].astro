---
import DashboardLayout from "../../../layouts/DashboardLayout.astro";
import { useI18n } from "../../../i18n/utils";
import { createNhostServerClient } from "../../../lib/nhost";
import { getStrainById } from "../../../lib/queries.ts";
import type { Strain } from "../../../types/db-types";
import SecondaryButton from "../../../components/ui/SecondaryButton.astro";
import { Icon } from "astro-icon/components";

const { t } = useI18n(Astro.url);
const { id } = Astro.params;

if (!id) {
  throw new Error("Strain ID is required");
}

const { user } = Astro.locals;
const nhost = await createNhostServerClient(Astro.cookies);

// Fetch strain data
let strain: Strain | null = null;
let error: string | null = null;

try {
  strain = await getStrainById(nhost, id);
  if (!strain) {
    error = t("strains.notFound") || "Strain not found";
  }
} catch (e) {
  error = "Failed to load strain data";
  console.error(e);
}

// Format cannabinoid percentages
const formatPercentage = (value: number): string => {
  return (value / 10).toFixed(1);
};
---

<DashboardLayout title={strain ? strain.name : t("strains.notFound")} user={user}>
  <div class="max-w-4xl mx-auto p-4 sm:p-6 lg:p-8">
    <!-- Back Button -->
    <div class="mb-6">
      <SecondaryButton link="/dashboard/strains" text="â† Back to Strains" />
    </div>

    <!-- Error State -->
    {error && (
      <div class="mb-6 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 px-4 py-3 rounded-lg" role="alert">
        <span class="block sm:inline">{error}</span>
      </div>
    )}

    {strain && (
      <div class="space-y-6">
        <!-- Header Card -->
        <div class="bg-gradient-to-r from-primary-50 to-primary-100 dark:from-secondary-900 dark:to-secondary-800 rounded-lg p-6 sm:p-8 border border-primary-200 dark:border-secondary-700">
          <div class="space-y-2">
            <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-gray-100">
              {strain.name}
            </h1>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Added {new Date(strain.created_at).toLocaleDateString()}
            </p>
            {strain.is_public && (
              <div class="inline-block">
                <span class="px-3 py-1 bg-primary-200 dark:bg-secondary-700 text-primary-700 dark:text-secondary-300 rounded-full text-xs font-semibold">
                  {t("strains.public") || "Public"}
                </span>
              </div>
            )}
          </div>
        </div>

        <!-- Main Content Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Left Column - Key Details -->
          <div class="md:col-span-2 space-y-6">
            <!-- Cannabinoid Content -->
            <div class="bg-primary-50 dark:bg-secondary-800 rounded-lg p-6 border border-primary-200 dark:border-secondary-700">
              <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">
                Cannabinoid Profile
              </h2>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">THC Content</p>
                  <div class="flex items-baseline space-x-1">
                    <p class="text-3xl font-bold text-primary-600 dark:text-secondary-300">
                      {formatPercentage(strain.thc_content)}
                    </p>
                    <span class="text-lg text-gray-600 dark:text-gray-400">%</span>
                  </div>
                  <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">
                    {strain.thc_content} mg/g
                  </p>
                </div>
                <div>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">CBD Content</p>
                  <div class="flex items-baseline space-x-1">
                    <p class="text-3xl font-bold text-tertiary-600 dark:text-tertiary-400">
                      {formatPercentage(strain.cbd_content)}
                    </p>
                    <span class="text-lg text-gray-600 dark:text-gray-400">%</span>
                  </div>
                  <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">
                    {strain.cbd_content} mg/g
                  </p>
                </div>
              </div>
            </div>

            <!-- Description -->
            {strain.description && (
              <div class="bg-primary-50 dark:bg-secondary-800 rounded-lg p-6 border border-primary-200 dark:border-secondary-700">
                <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-3">
                  {t("strains.description") || "Description"}
                </h2>
                <p class="text-gray-700 dark:text-gray-300 whitespace-pre-wrap text-sm leading-relaxed">
                  {strain.description}
                </p>
              </div>
            )}

            <!-- Tags -->
            {strain.tags && strain.tags.length > 0 && (
              <div class="bg-primary-50 dark:bg-secondary-800 rounded-lg p-6 border border-primary-200 dark:border-secondary-700">
                <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">
                  {t("strains.tags") || "Tags"}
                </h2>
                <div class="flex flex-wrap gap-2">
                  {strain.tags.map((tag: string) => (
                    <span key={tag} class="px-4 py-2 bg-primary-200 dark:bg-secondary-700 text-primary-700 dark:text-secondary-200 rounded-full text-sm font-medium">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>

          <!-- Right Column - Quick Info -->
          <div class="space-y-6">
            <!-- Strain Type Card -->
            <div class="bg-primary-50 dark:bg-secondary-800 rounded-lg p-6 border border-primary-200 dark:border-secondary-700">
              <h3 class="text-sm font-semibold text-primary-600 dark:text-secondary-400 uppercase tracking-wide mb-3">
                Strain Type
              </h3>
              <p class="text-lg font-bold text-primary-700 dark:text-secondary-200">
                {strain.name}
              </p>
            </div>

            <!-- Visibility Card -->
            <div class="bg-primary-50 dark:bg-secondary-800 rounded-lg p-6 border border-primary-200 dark:border-secondary-700">
              <h3 class="text-sm font-semibold text-primary-600 dark:text-secondary-400 uppercase tracking-wide mb-3">
                Visibility
              </h3>
              <div class="flex items-center space-x-2">
                <Icon
                  name={strain.is_public ? "tabler:world" : "tabler:lock"}
                  class="w-5 h-5 text-primary-600 dark:text-secondary-300"
                />
                <span class="font-medium text-gray-900 dark:text-gray-100">
                  {strain.is_public ? t("strains.public") || "Public" : "Private"}
                </span>
              </div>
            </div>

            <!-- Created Date Card -->
            <div class="bg-primary-50 dark:bg-secondary-800 rounded-lg p-6 border border-primary-200 dark:border-secondary-700">
              <h3 class="text-sm font-semibold text-primary-600 dark:text-secondary-400 uppercase tracking-wide mb-3">
                Date Added
              </h3>
              <div class="space-y-2">
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-500">Date</p>
                  <p class="text-sm font-medium text-gray-900 dark:text-gray-100">
                    {new Date(strain.created_at).toLocaleDateString()}
                  </p>
                </div>
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-500">Time</p>
                  <p class="text-sm font-medium text-gray-900 dark:text-gray-100">
                    {new Date(strain.created_at).toLocaleTimeString()}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-3 pt-6 border-t border-primary-200 dark:border-secondary-700">
          <SecondaryButton link="/dashboard/strains" text={t("common.cancel") || "Back"} />
          <div class="flex-1"></div>
          <!-- Edit and Delete buttons can be added here in the future -->
        </div>
      </div>
    )}
  </div>
</DashboardLayout>