---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import { useI18n } from "../../i18n/utils";
import Tile from "../../components/dashboard/Tile.astro";
import MonthlyTrendChart from "../../components/dashboard/MonthlyTrendChart.astro";
import StrainsAddedChart from "../../components/dashboard/StrainsAddedChart.astro";
import {
  getTimeSinceLastSession,
  getMonthlyTrend,
  getStrainsAddedLastDays,
  getStrainsAddedDailyLast30Days,
} from "../../lib/queries";

import { createNhostServerClient } from "../../lib/nhost";

const { t, lang } = useI18n(Astro.url);
const { user } = Astro.locals;

const nhost = await createNhostServerClient(Astro.cookies);
const timeSinceLastSession = await getTimeSinceLastSession(nhost, lang);
const monthlyTrend = await getMonthlyTrend(
  nhost,
  user?.id || "",
  new Date().getFullYear(),
);
const strainsAddedLast30Days = await getStrainsAddedLastDays(
  nhost,
  user?.id || "",
  30,
);
const strainsAddedDaily = await getStrainsAddedDailyLast30Days(
  nhost,
  user?.id || "",
);
---

<DashboardLayout user={user}>
  <div class="p-4 sm:p-6 lg:p-8 space-y-6">
    <div class="bg-card-bg-color p-6 rounded-lg shadow-md">
      <h1 class="text-2xl font-bold text-text-color">{t("dashboard.title")}</h1>
      {
        timeSinceLastSession && (
          <h3 class="text-sm text-text-color/60 mt-1">
            {t("dashboard.lastSession")}: {timeSinceLastSession}
          </h3>
        )
      }
      <p class="text-text-color/80 mt-1">
        {t("dashboard.welcomeBack")}{t("dashboard.welcomeMessage")}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      <Tile
        title={t("dashboard.recentEntries.title")}
        description={strainsAddedLast30Days > 0
          ? `You have added ${strainsAddedLast30Days} new strain${strainsAddedLast30Days !== 1 ? "s" : ""} this month. Great work!`
          : "No strains added yet. Start building your collection!"}
        buttonText={t("dashboard.recentEntries.button")}
        variant="primary"
      />
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      <MonthlyTrendChart monthlyTrend={monthlyTrend} />
      <StrainsAddedChart
        strainsAdded={strainsAddedLast30Days}
        dailyData={strainsAddedDaily}
      />
    </div>
  </div>
</DashboardLayout>
