---
import { useI18n } from "../i18n/utils";
import PublicLayout from "../layouts/PublicLayout.astro";
import Card from "../components/ui/Card.astro";
import { Image } from "astro:assets";

import picture1 from "../assets/gemini_3.png";
import picture2 from "../assets/gemini_4.png";
import meditation from "../assets/meditation.png";
import PrimaryButton from "../components/ui/PrimaryButton.astro";

const { lang, t, translatePath } = useI18n(Astro);

const cards = [
  {
    icon: "tabler:file-text",
    title: t("toolkit.logging.title"),
    description: t("toolkit.logging.description"),
  },
  {
    icon: "tabler:chart-dots-3",
    title: t("toolkit.insights.title"),
    description: t("toolkit.insights.description"),
  },
  {
    icon: "tabler:books",
    title: t("toolkit.explore.title"),
    description: t("toolkit.explore.description"),
  },
  {
    icon: "tabler:heart",
    title: t("toolkit.tracking.title"),
    description: t("toolkit.tracking.description"),
  },
  {
    icon: "tabler:lock-check",
    title: t("toolkit.security.title"),
    description: t("toolkit.security.description"),
  },
  {
    icon: "tabler:bell-ringing",
    title: t("toolkit.reminders.title"),
    description: t("toolkit.reminders.description"),
  },
];
---

<PublicLayout
  locale={lang}
  title={t("hero.title")}
  description={t("hero.subtitle")}
>
  <!-- Hero Section -->
  <section
    class="mt-16 sm:mt-20 md:mt-32 lg:mt-32 mb-8 sm:mb-10 md:py-32 lg:py-64"
  >
    <div
      class="container mx-auto px-4 sm:px-6 text-center relative overflow-visible"
    >
      <div class="relative z-10">
        <h1
          class="text-2xl sm:text-3xl md:text-5xl lg:text-6xl font-extrabold leading-tight mb-4"
          set:html={t("hero.title")}
        />
        <p
          class="text-sm sm:text-base md:text-lg lg:text-xl max-w-3xl mx-auto mb-8"
          set:html={t("hero.subtitle")}
        />
        <PrimaryButton
          link={translatePath("/register")}
          text={t("hero.ctaButton")}
        />
      </div>
      <Image
        class="pointer-events-none select-none absolute left-1/2 -translate-x-1/2 sm:left-auto sm:translate-x-0 md:right-0 bottom-0 transform rotate-3 max-w-[260px] sm:max-w-[300px] md:max-w-sm lg:max-w-2xl opacity-30 sm:opacity-40 md:opacity-45 dark:opacity-25 sm:dark:opacity-30 md:dark:opacity-35 z-0"
        src={meditation}
        alt="CannnaLog user meditating after tracking their cannabis usage"
        aria-hidden="true"
        loading="lazy"
      />
    </div>
  </section>
  <!-- Second section -->
  <section>
    <div
      class="gap-8 sm:gap-12 lg:gap-16 items-center py-8 px-4 mx-auto max-w-screen-xl lg:grid lg:grid-cols-2 lg:py-16 lg:px-6"
    >
      <div class="font-light">
        <h2
          class="mb-4 text-2xl sm:text-3xl md:text-4xl tracking-tight font-extrabold"
          set:html={t("features.title")}
        />
        <p
          class="mb-4 text-sm sm:text-base"
          set:html={t("features.paragraph1")}
        />
        <p class="text-sm sm:text-base" set:html={t("features.paragraph2")} />
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-8">
        <Image
          class="w-full rounded-lg"
          src={picture1}
          alt="Cannalog gemini AI generated picture of a CannaLog user"
        />
        <Image
          class="mt-4 w-full lg:mt-10 rounded-lg"
          src={picture2}
          alt="Cannalog gemini AI generated picture of a CannaLog user"
        />
      </div>
    </div>
  </section>
  <!-- Cards section -->
  <section class="">
    <div class="py-8 px-4 my-auto mx-auto max-w-screen-xl sm:py-16 lg:px-6">
      <div class="w-full mx-auto max-w-screen-md mb-8 lg:mb-16 text-center">
        <h2
          class="mb-4 text-2xl sm:text-3xl md:text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
        >
          {t("toolkit.title")}
        </h2>
        <p
          class="text-sm sm:text-base md:text-lg text-gray-500 dark:text-gray-400"
        >
          {t("toolkit.subtitle")}
        </p>
      </div>
      <div
        class="space-y-6 sm:space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-8 lg:gap-12 md:space-y-0"
      >
        {
          cards.map((c) => (
            <Card icon={c.icon} title={c.title} description={c.description} />
          ))
        }
      </div>
    </div>
  </section>
  <!-- Second CTA section -->
  <section>
    <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center">
        <h2
          class="mb-4 text-2xl sm:text-3xl md:text-4xl tracking-tight font-extrabold leading-tight text-gray-900 dark:text-white"
        >
          {t("cta.title")}
        </h2>
        <p
          class="mb-6 font-light text-sm sm:text-base md:text-lg text-gray-500 dark:text-gray-400"
        >
          {t("cta.subtitle")}
        </p>
        <a
          href="#"
          class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800"
          >{t("cta.button")}</a
        >
      </div>
    </div>
  </section>
</PublicLayout>
