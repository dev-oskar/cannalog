---
import { useI18n } from "../i18n/utils";
import AuthLayout from "../layouts/AuthLayout.astro";

const { lang, t, translatePath } = useI18n(Astro);

export const prerender = false;

const title = t("signin.title");

// Handle messages from URL params and form submission
const url = new URL(Astro.request.url);
const message = url.searchParams.get("message");
const errorParam = url.searchParams.get("error");

let error = errorParam || "";

if (errorParam) {
  // Handle specific error codes with proper i18n
  switch (errorParam) {
    case "auth-required":
      error = t("signin.errors.authRequired");
      break;
    default:
      error = t("signin.errors.checkCredentials");
      break;
  }
}
---

<AuthLayout title={title}>
  <section class="min-h-screen w-screen flex items-center justify-start pt-6">
    <div
      class="flex flex-col items-center px-6 py-2 w-full max-w-screen-md mx-auto"
    >
      <div
        class="w-full rounded-lg shadow bg-primary-300 dark:bg-secondary-500 sm:max-w-lg xl:p-0 -mt-12"
      >
        <div class="p-4 space-y-4 md:space-y-6 sm:p-6 max-w-full overflow-auto">
          <h1
            class="text-xl font-bold leading-tight tracking-tight md:text-2xl"
          >
            {t("signin.heading")}
          </h1>

          {
            error && (
              <div
                class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400"
                role="alert"
              >
                {error}
              </div>
            )
          }

          {
            message && (
              <div
                class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400"
                role="alert"
              >
                {message}
              </div>
            )
          }

          <form
            class="space-y-4 md:space-y-6"
            action="/api/signin"
            method="post"
            id="signin-form"
          >
            <!-- Hidden field to preserve language context -->
            <input type="hidden" name="lang" value={lang} />

            <div>
              <label
                for="email"
                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
              >
                {t("signin.emailLabel")}
              </label>
              <input
                type="email"
                name="email"
                id="email"
                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                placeholder={t("signin.emailPlaceholder")}
                required
                autofocus
              />
            </div>

            <div>
              <label
                for="password"
                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
              >
                {t("signin.passwordLabel")}
              </label>
              <input
                type="password"
                name="password"
                id="password"
                placeholder={t("signin.passwordPlaceholder")}
                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                required
              />
            </div>

            <div class="flex items-center justify-between">
              <a
                href="#"
                class="text-sm font-medium text-primary-600 hover:underline dark:text-primary-500"
              >
                {t("signin.forgotPassword")}
              </a>
            </div>

            <button
              type="submit"
              class="w-full text-white bg-primary-700 dark:bg-primary-600 hover:cursor-pointer box-border border border-transparent hover:bg-primary-800 dark:hover:bg-primary-700 focus:ring-4 focus:ring-primary-600 shadow-xs font-medium leading-4 rounded-xl px-3 sm:px-4 py-2 sm:py-2.5 text-xs sm:text-sm whitespace-nowrap focus:outline-none"
            >
              {t("signin.signInButton")}
            </button>

            <p class="text-sm font-light text-gray-500 dark:text-gray-400">
              {t("signin.noAccount")}
              <a
                href={translatePath("/register")}
                class="font-medium text-primary-600 hover:underline dark:text-primary-500"
              >
                {t("signin.signUp")}
              </a>
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
</AuthLayout>
